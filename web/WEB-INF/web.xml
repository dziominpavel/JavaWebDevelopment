<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>Home</servlet-name>
        <jsp-file>/WEB-INF/jsp/main.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Home</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SignIn</servlet-name>
        <jsp-file>/WEB-INF/jsp/signin.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>SignIn</servlet-name>
        <url-pattern>/signin</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SignUp</servlet-name>
        <jsp-file>/WEB-INF/jsp/signup.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>SignUp</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Locale</servlet-name>
        <jsp-file>/WEB-INF/jsp/index.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Locale</servlet-name>
        <url-pattern>/locale</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserInfo</servlet-name>
        <jsp-file>/WEB-INF/jsp/userinfo.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserInfo</servlet-name>
        <url-pattern>/userinfo</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Products</servlet-name>
        <jsp-file>/WEB-INF/jsp/products.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Products</servlet-name>
        <url-pattern>/products</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Users</servlet-name>
        <jsp-file>/WEB-INF/jsp/users.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Users</servlet-name>
        <url-pattern>/users</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Receipts</servlet-name>
        <jsp-file>/WEB-INF/jsp/receipts.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Receipts</servlet-name>
        <url-pattern>/receipts</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ProductInfo</servlet-name>
        <jsp-file>/WEB-INF/jsp/productinfo.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProductInfo</servlet-name>
        <url-pattern>/productinfo</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ReceiptInfo</servlet-name>
        <jsp-file>/WEB-INF/jsp/receiptinfo.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReceiptInfo</servlet-name>
        <url-pattern>/receiptinfo</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Error</servlet-name>
        <jsp-file>/WEB-INF/jsp/error/error.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Error</servlet-name>
        <url-pattern>/error</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AccessDenied</servlet-name>
        <jsp-file>/WEB-INF/jsp/error/accessDenied.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>AccessDenied</servlet-name>
        <url-pattern>/accessDenied</url-pattern>
    </servlet-mapping>


    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/jsp/error/notFound.jsp</location>
    </error-page>

    <jsp-config>
        <taglib>
            <taglib-uri>customtags</taglib-uri>
            <taglib-location>/WEB-INF/tld/custom.tld</taglib-location>
        </taglib>
        <jsp-property-group>
            <description>Header and footer</description>
            <url-pattern>/WEB-INF/jsp/*</url-pattern>
            <el-ignored>false</el-ignored>
            <include-prelude>/WEB-INF/jspf/header.jspf</include-prelude>
            <include-coda>/WEB-INF/jspf/footer.jspf</include-coda>
        </jsp-property-group>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <page-encoding>UTF-8</page-encoding>
        </jsp-property-group>
    </jsp-config>
</web-app>